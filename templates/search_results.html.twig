{% extends 'base.html.twig' %}

{% block title %}Techbase - Résultats{% endblock %}

{% block body %}
<div class="page-header-sticky">
  <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
    <i class="fas fa-search"></i>
    Recherche
  </h1>
</div>

<form method="GET" action="./?action=recherche" class="relative mb-6">
  <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
  <input type="text" name="q" class="w-full pl-11 pr-20 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-base" placeholder="Rechercher..." value="{{ search }}" autofocus>
  <button type="submit" class="absolute right-2 top-1/2 transform -translate-y-1/2 px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark transition font-medium">
    <i class="fas fa-search"></i>
  </button>
</form>

<div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
  {% if fiches|length > 0 %}
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-xl font-bold text-gray-900 flex items-center gap-3 mb-2">
        <i class="fas fa-list"></i>
        Résultats
      </h2>
      <p class="text-gray-600">
        {% if fiches|length > 0 %}
          {{ fiches|length }} résultat{% if fiches|length > 1 %}s{% endif %}
        {% else %}
          Aucun résultat
        {% endif %}
      </p>
    </div>

    <div class="divide-y divide-gray-200">
      {% for fiche in fiches %}
      <div class="p-6 hover:bg-gray-50 transition">
        <a href="./?action=view&id={{ fiche.id }}" class="text-lg font-semibold text-primary hover:text-primary-dark transition block mb-3">
          {{ fiche.titre }}
        </a>

        {% if fiche.tags|length > 0 %}
        <div class="flex flex-wrap gap-2 mb-3">
          {% for tag in fiche.tags %}
            <span class="px-2.5 py-1 bg-gray-100 text-gray-700 rounded-md text-sm font-medium">{{ tag }}</span>
          {% endfor %}
        </div>
        {% endif %}

        <div class="flex justify-between items-center">
          <div>
            {% if fiche.rubrique_nom %}
              <div class="text-sm text-gray-600 flex items-center gap-2">
                <i class="fas fa-folder"></i>
                {{ fiche.rubrique_nom }}
              </div>
            {% else %}
              <div class="text-sm text-gray-600 flex items-center gap-2">
                <i class="fas fa-folder-open"></i>
                Sans rubrique
              </div>
            {% endif %}
          </div>
          <span class="px-3 py-1.5 rounded-lg text-sm font-semibold flex items-center gap-2 {% if fiche.etat == 'À faire' %}bg-yellow-100 text-yellow-800{% elseif fiche.etat == 'En cours' %}bg-blue-100 text-blue-800{% else %}bg-green-100 text-green-800{% endif %}">
            {% if fiche.etat == 'À faire' %}
              <i class="fas fa-clock"></i>
            {% elseif fiche.etat == 'En cours' %}
              <i class="fas fa-spinner"></i>
            {% else %}
              <i class="fas fa-check"></i>
            {% endif %}
            {{ fiche.etat }}
          </span>
        </div>
      </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="p-12">
      <div class="text-center">
        <i class="fas fa-search text-6xl text-gray-300 mb-4"></i>
        <div class="text-xl font-semibold text-gray-900 mb-2">Aucun résultat</div>
        <div class="text-gray-600 mb-6">Essayez d'autres mots-clés</div>
        <div class="flex justify-center gap-3">
          <a href="./" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-medium inline-flex items-center gap-2">
            <i class="fas fa-arrow-left"></i>
            Retour
          </a>
          <a href="./?action=new" class="px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark transition font-medium inline-flex items-center gap-2">
            <i class="fas fa-plus"></i>
            Créer
          </a>
        </div>
      </div>
    </div>
  {% endif %}
</div>
{% endblock %}
